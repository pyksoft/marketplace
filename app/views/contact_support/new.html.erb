<section class="breadcrumbs">
    <%= link_to 'Home', root_path %> / Contact Support
</section>
<section class="application contact-support">
  <h2>Contact Support</h2>
  <div class="spacer20"></div>
  <%= form_with(url: contact_support_index_url, local:true) do |f| %>
    <p>Please let us know how we can help</p>
    <div class="spacer20"></div>

    <% unless @error_messages.empty? %>
    <div id="error_explanation" class="alert alert-danger">
      <% @error_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :message, rows: 6 %>
    </div>

    <div class="actions">
      <%= f.submit 'Send' %>
    </div>
<% end %>
</section>