<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Image data</th>
      <th>Date of birth</th>
      <th>Short bio</th>
      <th>Superpowers</th>
      <th>Favourites</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= image_tag profile.image_url(:thumb) unless profile.image.nil? %></td>
        <td><%= profile.date_of_birth %></td>
        <td><%= profile.short_bio %></td>
        <td><%= profile.superpowers %></td>
        <td><%= profile.favourites %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

