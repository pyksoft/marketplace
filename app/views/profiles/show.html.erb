<p id="notice"><%= notice %></p>

<h1><%= @profile.full_name %></h1>
<p>
  <strong>Image data:</strong>
  <%= image_tag @profile.image_url(:thumb) unless @profile.image.nil? %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @profile.date_of_birth %>
</p>

<p>
  <strong>Short bio:</strong>
  <%= @profile.short_bio %>
</p>

<p>
  <strong>Superpowers:</strong>
  <%= @profile.superpowers %>
</p>

<p>
  <strong>Favourites:</strong>
  <%= @profile.favourites %>
</p>

<h2>Billing</h2>
<p>
  <%= @profile.billing_address.full_address %>
</p>

<h2>Shipping</h2>
<p>
  <%= @profile.shipping_address.full_address %>
</p>

<%= link_to 'Write a Review', new_profile_review_path(@profile) %>
<%= link_to 'Edit', edit_profile_path(@profile) %>