<section class="hero">
  <div id="hero-carousel" class="hero-carousel carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active" style="<%= style_for_backgound_image(asset_url('carousel1.jpg')) %>"></div>
      <div class="carousel-item" style="<%= style_for_backgound_image(asset_url('carousel2.jpg')) %>"></div>
      <div class="carousel-item" style="<%= style_for_backgound_image(asset_url('carousel3.jpg')) %>; background-position: top center;"></div>
      <div class="carousel-item" style="<%= style_for_backgound_image(asset_url('carousel4.jpg')) %>; background-position: top center;"></div>
      <div class="carousel-item" style="<%= style_for_backgound_image(asset_url('carousel5.jpg')) %>"></div>
      <div class="carousel-item" style="<%= style_for_backgound_image(asset_url('carousel6.jpg')) %>; background-position: top center;"></div>
    </div>
    <a class="carousel-control-prev" href="#hero-carousel" role="button" data-slide="prev" onclick="$('#hero-carousel').carousel('prev'); return false;">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#hero-carousel" role="button" data-slide="next" onclick="$('#hero-carousel').carousel('next'); return false;">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="new-product-button d-flex flex-wrap justify-content-center">
    <%= link_to button_tag('Sell an Item'), new_product_path, class: 'p-2' %>
    <%= link_to button_tag('Find an Item'), search_index_path, class: 'p-2' %>
  </div>
</section>

<% unless @latest_products.blank? %>
<section class="products">
  <h2 class="products-list-label">Latest Additions</h2>
  <div class="products-list row justify-content-center justify-content-md-start">
    <%= render @latest_products %>
  </div>
</section>
<% end %>

<% unless @top_products.blank? %>
<section class="products">
  <h2 class="products-list-label">Trending Items</h2>
  <div class="products-list row justify-content-center justify-content-md-start">
    <%= render @top_products %>
  </div>
</section>
<% end %>

<% unless @sold_products.blank? %>
<section class="products">
  <h2 class="products-list-label">Recently Sold Items</h2>
  <div class="products-list row justify-content-center justify-content-md-start">
    <%= render @sold_products %>
  </div>
</section>
<% end %>

<script>
  $('.carousel').carousel({
    interval: 2000,
    pause: "false"
  }).carousel('cycle')
</script>